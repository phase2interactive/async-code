FROM node:20.9.0-alpine

# Build arguments for user configuration
ARG USER_UID=1000
ARG USER_GID=1000

# Install system dependencies
RUN apk add --no-cache \
    bash \
    git \
    curl \
    openssh-client \
    python3 \
    py3-pip

# Create non-root user with configurable UID/GID
RUN (addgroup -g ${USER_GID} -S appuser 2>/dev/null || true) && \
    (adduser -u ${USER_UID} -S appuser -G appuser 2>/dev/null || true) && \
    mkdir -p /home/appuser && \
    chown -R ${USER_UID}:${USER_GID} /home/appuser

# Install Claude Code globally
RUN npm install -g @anthropic-ai/claude-code

# Create workspace directory and set ownership
WORKDIR /workspace
RUN chown -R ${USER_UID}:${USER_GID} /workspace

# Configure git (default values, will be overridden)
RUN git config --global user.email "claude-code@automation.com" && \
    git config --global user.name "Claude Code Automation" && \
    git config --global init.defaultBranch main

# Set up environment
ENV NODE_ENV=production

# Switch to non-root user
USER ${USER_UID}

# Default command
CMD ["bash"]