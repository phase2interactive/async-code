# Required Environment Variables
# Copy this file to .env and fill in your values

# Supabase Configuration (Required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# JWT Configuration (Required)
# Generate a secure secret: openssl rand -hex 32
JWT_SECRET=your-very-secure-secret-key-change-this-in-production-minimum-32-chars

# API Keys (Optional - add as needed for AI agents)
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key

# Flask Configuration (Optional)
FLASK_ENV=development
DEBUG=true
PORT=5000

# Container Configuration (Optional)
CONTAINER_UID=1000
CONTAINER_GID=1000
CONTAINER_MEM_LIMIT=2g
CONTAINER_CPU_SHARES=1024

# JWT Token Expiration (Optional)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7